{
  "name" : "ngabor84/enum",
  "description" : "Enum is a simple implementation of php enumeration type.",
  "version" : "0.1.0",
  "homepage" : "https://github.com/ngabor84/enum",
  "license": "MIT",
  "authors": [
    {
      "name": "Gabor Nemeth",
      "email": "negabor@gmail.com",
      "homepage": "http://www.nemeth-gabor.hu",
      "role": "Developer"
    }
  ],
  "require": {
    "php" : "^7.0",
  },
  "require-dev": {
    "phpunit/phpunit": "6.0"
  },
  "autoload": {
    "psr-4": {
      "Enum\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "check": [
      "@cs-check",
      "@md-check",
      "@cpd-check",
      "@test"
    ],
    "cs-check": "phpcs --colors",
    "md-check": "phpmd ./src text phpmd.xml",
    "cpd-check": "phpcpd ./src",
    "cs-fix": "phpcbf --colors",
    "test": "phpunit --colors=always"
  }
}